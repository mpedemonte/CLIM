      function initMap(num) {
        if (num==1) {
        	var temuco = {lat: -38.735747, lng: -72.5943726};
        	var map = new google.maps.Map(document.getElementById('map'), {
          		zoom: 18,
          		center: temuco
        		});
        	var marker = new google.maps.Marker({
          		position: temuco,
          		map: map
        		});
      	}
      	if (num==2) {
      		var temuco = {lat: -38.7410292, lng: -72.6070823};
        	var map = new google.maps.Map(document.getElementById('map'), {
          		zoom: 18,
          		center: temuco
        		});
        	var marker = new google.maps.Marker({
          		position: temuco,
          		map: map
        		});
      	}
      }
    </script>
    <script async defer
    	src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCDm2rdxyxHE6elxzlwQ-d-e-qRMrLCw68&callback=initMap">
    </script>
